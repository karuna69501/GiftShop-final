<div id="productsContainer">
  
  <h1>Products</h1>
   <% @products.each do |product| %>
    <div class="producthols">
       <h1><%= product.title %></h1>
       <%= link_to (image_tag product.image_url, :class => "productholsIm"), product %>
       <p><%= product.description %></p>
       <p>Price <%= number_to_currency(product.price, :unit => "â‚¬") %>
       <br>
       Category: <%= product.category %>
       <br>
       Brand: <%= product.brand %></p>
       
      <p>
       <%= link_to 'Show',  product, :class => "buttonProduct", :role => "button" %>

      <% if user_signed_in?  &&  current_user.admin == true %>
        <%= link_to 'Edit',  edit_product_path(product), :class => "buttonProduct", :role => "button" %>
        <%= link_to 'Destroy',  product, method: :delete, data: { confirm: 'Are you sure?' }, :class => "buttonProduct", :role => "button" %>
      <% end %>
       <a href="/cart/<%= product.id %>" class="buttonProduct">Add To Cart</a>
      </p>
      
      
    </div>
   <% end %>
</div>

<div class="newProduct">
  <% if user_signed_in?  &&  current_user.admin == true %>

  <%= link_to 'Add New Product',  new_product_path, :class => "buttonProduct", :role => "button" %>
  
  <% end %>
 
</div>