<table class="catalog">
    

    
  <% @products.limit(3).order(:id).each do |product| %>
      <tr>
        <td>
    
   
                <div class="producthols"  >
        
                  
                  <div class="title">
                    <%= link_to product.title, product %>
                  </div>
                  
                    <div class="image">
                    <%= link_to (image_tag product.image_url), product %>
                  </div>        
                  
                  <div class="description">
                    <%= product.description %>
                  </div>  
                  
                      <div class="price">
                         <%= number_to_currency(product.price, :unit => "â‚¬") %>
                      </div>
                  
                      <div class="links">
                        <% if session[:login] ==1 %>
                          <%= link_to 'Edit', edit_product_path(product) %>
                          <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
                        <%else%>
                        
                          <a href="/cart/<%= product.id %>">Add to Cart</a>
                        <%end%>  
                        </div>
                </div> 
   
        </td>
      </tr>
    <% end %>
</table>

