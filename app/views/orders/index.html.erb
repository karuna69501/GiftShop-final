<h3>User: <%= current_user.email %></h3>

<div id="productsContainer">
  <h1>History of Orders</h1>
  
  <table id="customers">
    <thead>
      <tr>
        <th>Order Date</th>
        <th>User</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at %></td>
          <td><%= order.user.email %></td>
          <td><%= order.status %></td>
          <td><%= link_to 'Show', order %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>